<Window x:Class="Rechner01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rechner01"
        mc:Ignorable="d"
        Title="MainWindow" Height="672" Width="771.5" Background="Black">
    <Grid Margin="0,170,218,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="116*" />
            <ColumnDefinition Width="136*" />
            <ColumnDefinition Width="126*" />
            <ColumnDefinition Width="127*" />
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Content="ce" Grid.Column="0" Grid.Row="0" Name="ce" FontSize="50" Click="Ce_Click_1"/>
        <Button Content="c" Name="c" FontSize="50" Grid.Column="1" Grid.Row="0" />
        <Button Content="back" Name="back" FontSize="50" Grid.Column="2" Grid.Row="0"/>
        <Button Content="/" Name="geteilt" FontSize="50" Grid.Column="3" Grid.Row="0" Click="op_click"/>
        <Button Content="7" Name="sieben" FontSize="50" Grid.Column="0" Grid.Row="1" Click="zahl_click"/>
        <Button Content="8" Name="acht" FontSize="50" Grid.Column="1" Grid.Row="1" Click="zahl_click"/>
        <Button Content="9" Name="neun"  FontSize="50"  Grid.Column="2" Grid.Row="1" Click="zahl_click"/>
        <Button Content="*" Name="multiplikation" FontSize="50"  Grid.Column="3" Grid.Row="1" Click="op_click"/>
        <Button Content="4" Name="vier" Grid.Column="0" FontSize="50"  Grid.Row="2" Click="zahl_click"/>
        <Button Content="5" Name="fünf" Grid.Column="1" Grid.Row="2" FontSize="50"  Click="zahl_click"/>
        <Button Content="6" Name="sechs" Grid.Column="2" Grid.Row="2" FontSize="50" Click="zahl_click"/>
        <Button Content="+" Name="plus" Grid.Column="3" Grid.Row="2" FontSize="50" Click="op_click" />
        <Button Content="1" Name="eins" Grid.Column="0" Grid.Row="3" FontSize="50" Click="zahl_click"  />
        <Button Content="2" Name="zwei" Grid.Column="1" Grid.Row="3" FontSize="50" Click="zahl_click" />
        <Button Content="3" Name="drei" Grid.Column="2" Grid.Row="3" FontSize="50" Click="zahl_click"/>
        <Button Content="-" Name="minus" Grid.Column="3" Grid.Row="3" FontSize="50"  Click="op_click"/>
        <Button Content="+/-" Name="vorzeichen" Grid.Column="0" Grid.Row="4" FontSize="50" Click="op_click" />
        <Button Content="0" Name="null" Grid.Column="1" Grid.Row="4" FontSize="50"  Click="zahl_click"/>
        <Button Content="," Name="komma" Grid.Column="2" Grid.Row="4" FontSize="50" Click="op_click"/>
        <Button Content="=" Name="gleich"  Grid.Column="3" Grid.Row="4" FontSize="50" Click="Gleich_Click" />



        <TextBox Name="textbox1" FontSize="50" HorizontalAlignment="Left" Height="106" Margin="24,-156,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="521" Grid.ColumnSpan="4"/>


        <TextBlock TextAlignment="Justify" Background="White"  FontSize="40" Name="opzeichen" Grid.Column="4" HorizontalAlignment="Left" Margin="5,-156,-164,0" TextWrapping="Wrap"  VerticalAlignment="Top" Height="125" Width="160"/>
        <TextBox Name="textboxspeicher"  Grid.Column="4" HorizontalAlignment="Left" Height="226" Margin="37,36,-164,0" Grid.Row="2" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="128" Grid.RowSpan="3"/>

    </Grid>

</Window>
